@model WebTraSua.Models.Thuonghieu

@{
    ViewBag.Title = "Suath";
    Layout = "~/Views/Layout/Admin.cshtml";
}

<h2>Chỉnh sửa thông tin thương hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTH)
            <div class="control-label col-md-2" style="font-weight: bold;">
                Mã Thương Hiệu:
            </div>
            <div class="col-md-10">
                <div style=" font:18px;padding:5px 0 ;" style="font-weight: bold;">
                    @Model.MaTH
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2" style="font-weight: bold;margin-left:12px;">
                    Tên Thương Hiệu:
                </div>
                <div class="col-md-10" style=" width:197px;" >
                    @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Lưu" class="btn btn-default" style="color: white; background-color: red;" />
                </div>
            </div>
        </div>
    </div>
}

<div >
    <a href="@Url.Action("QLThuonghieu", "Admin")" class="btn btn-default" style=" margin-left:30px; margin-top: -92px; color: white; background-color: #4aa331;" >
       Quay về
    </a>
</div>