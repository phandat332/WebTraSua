@model WebTraSua.Models.Thuonghieu

@{
    ViewBag.Title = "Themmoith";
    Layout = "~/Views/Layout/Admin.cshtml";
}

<h2>Thêm Mới Thương Hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class = "control-label col-md-2" style="font-weight: bold; margin-left: -22px;" >
                Tên thương hiệu:
            </div>
            
            <div class="col-md-10" style=" width: 197px; margin-left: -22px;">
                @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10"  style=" margin-left: 4%; margin-left: 2px;">
                <a href="@Url.Action("QLThuonghieu", "Admin")" class="btn btn-default" style="color: white; background-color: #4aa331; margin-right:20px;"  > Quay về </a>  

                <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color: #a67b1bb5; color: white; "/>
            </div>
        </div>
    </div>
}


<style>
    .MenuTrang li {
        display: inline;
    }
</style>

